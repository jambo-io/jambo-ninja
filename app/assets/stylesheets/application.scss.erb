

@import "bootstrap";
@import "social-share-button";
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro');


html {


}


body {
  width: 100%;
  min-height: 100%;
  padding: 0px;
  background: #f2f2f2;
  height:100%;
  font-family: 'Source Sans Pro', sans-serif;
  font-size: 100%;
  overflow-x: hidden;
  padding-top: 0px;

}
.card {
  border: 0;
}
.card-body {
  padding: 9px;
}
.page-bg {
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  z-index:-10;
}


.page-bg.main-page {

  background-color: #000;

}


.blockquote {

  color: #fff !important;
  font-style: italic;
  margin: 0 0 30px 0;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.6);

  width: 45%;



}

@media only screen and (max-width: 768px) {
  .blockquote {
    width: 95%;
  }
}

.blockquote-footer {
  color: #fff !important;
}



.parallax-window{
  min-height: 400px;

}
.parallax-mirror{
  z-index: 0 !important;
  background-size: cover !important;
}



@media only screen and (max-device-width: 768px) {
  .front-background {
    background-attachment: scroll;
  }
}

li{
  list-style-type:none;
}

.insc {



  background: rgb(255,255,255);
  background: rgba(255,255,255,.8) !important;
  float: right;
  margin-right: 150px !important;
  max-width: 500px !important;
  border: 0 !important;
  z-index: 0;

  .help-block {
    color: #ccc
  }

}

input {

  font-size: 10px;
}


table {
  padding: 15px;
}

#video-background {
  position: fixed;
  top:50%;
  left: 50%;
  bottom: 0;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  z-index: -1000;
  transform: translate(-50%,-50%);

}
@media only screen and (max-width: 978px) {
  .insc {


    background: rgb(255,255,255) !important;
    background: rgba(255,255,255,.8) !important;
    float: none !important;
    margin-right: auto !important;

    margin: auto !important;
    margin-top:100px !important;
    background-color: #fff !important;
    width:800px !important;
    max-width: 95% !important;
    padding: 3px 15px 30px 15px !important;
    border: 1px #eaeaea solid !important;
    border-radius: 5px !important;
  }

}



p {

  margin-top: 3em; color: #000;
  margin-bottom: 3em;
  color:#584747 !important;

}

.btn:hover{
  animation: bounceIn .3s;
  animation-fill-mode: forwards;
}

@keyframes bounceIn {
  0% {
    transform: scale(1);
  }
  60% {
    transform: scale(1.1);
  }
  100% {
    transform:scale(1.08);
  }
}

.nav-animation {
  animation: hop .5s ease-out;
  @keyframes hop {
    0% {
      transform: translateX(-10%);
      opacity:0;
    }
    100%{
      transform: translate(0);
      opacity:1;
    }
  }
}

.navbar-light .navbar-nav .nav-link {
  color: rgb(58, 134, 22);
}
.navbar-light .navbar-nav .nav-link:hover, .navbar-light .navbar-nav .nav-link:focus {
  color: rgba(4, 29, 6, 0.74);
}
h1 {

  color:#584747 !important;

  animation: content .5s ease-out;
  @keyframes content {
    0% {
      transform: translateX(-5%);
      opacity:0;
    }
    100%{
      transform: translate(0);
      opacity:1;
    }
  }
}
.icon-bar{
  background-color: #888;
}
.brand {
  position: relative;

  height:50px; width:auto;
  z-index: 4 !important;
}

.shadow {
  position:absolute;
  width: 100%;
  height: 100%;
  left:0;
  top:0;
  right: 0;
  bottom: 0;
}

.content {
  margin-top: 40px;
  margin-bottom: 40px;
  height:100%;
  min-height:100%;
}


.navindex {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: -1px;
  margin-bottom:100px;

  background-color: #fff !important;

  $dropshadow : -0 5px 6px -6px #000;
  -webkit-box-shadow: $dropshadow;
  -moz-box-shadow: $dropshadow;
  box-shadow: $dropshadow;

  pointer-events:none;
}


ul .dropdown-menu {

  animation: dropdown .1s ease-out;
  @keyframes dropdown {
    0% {
      transform: translateY(-100%);

    }
    100%{
      transform: translate(0);

    }
  }
}

.dropdown-item:hover, .dropdown-item:focus {

  color: #16181b;
  text-decoration: none;
  background-color: #fff !important;

}


.container {

  background-color: #fff;
  width:800px;
  min-height: 100px;
  z-index: 1;
  margin-top:10px;

  width:800px;
  max-width: 99%;
  padding: 30px 50px 30px 50px;
  padding-top:30px !important;

  border: 1px #eaeaea solid;
  border-radius: 3px;
