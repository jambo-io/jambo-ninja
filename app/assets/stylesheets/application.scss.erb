@import "bootstrap";

@import url("https://fonts.googleapis.com/css?family=Comfortaa");
@import url("https://fonts.googleapis.com/css?family=Share&display=swap");
@font-face {
  font-family: "Gotham Bold";
  src: asset-url("fonts/GothamRoundedBook_21018.ttf") format("ttf");
 
}

* {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.empty {
  width: 50px;
}

html,
body {
  max-width: 100%;
  overflow-x: hidden;
}

body {
  background-color: #edeff0 !important;
  background: linear-gradient(
    0deg,
    rgba(221, 224, 226, 1) 0%,
    rgba(237, 239, 240, 1) 100%
  );
  text-rendering: optimizeLegibility;
  font-family: "Comfortaa", helvetica;
}

.alert-primary {
  color: #212529;
  background-color: #d3eada17;
  border-color: #ecf3e570;
  padding: 0.6em;
}

input {
  font-weight: bold !important;
  color: black !important;
}

.form-control:focus {
  color: #495057 !important;
  background-color: #fff !important;
  border-color: #08ffb3 !important;
  outline: 0 !important;
  box-shadow: 0 0 5px 0rem rgb(15, 85, 120) !important;
  border-radius: 2px !important;
}

a {
  transition: color 300ms 0s ease;
  text-decoration: none !important;
}
a:hover {
  text-decoration: none !important;
}
ul {
  list-style-type: none;
}
.navbar {
  background-color: #3e474f;
  height: 71px;
  margin-bottom: -20px;
}

@media only screen and (max-width: 768px) {
  .navbar {
    height: auto !important;
  }
}

.navbar-nav .dropdown-menu {
  background-color: #3e474f;
  color: #b2bbbd;
}
.navbar-collapse {
  background-color: #3e474f;
  padding: 0.8em;
  padding-left: 0.2em;
}

.dropdown-login {
  width: 20em;
}

.dropdown-item:hover,
.dropdown-item:focus {
  color: #fff;
  text-decoration: none;
  background-color: #3e474f;
}
.dropdown a {
  color: #b2bbbd;
}
.nav-link {
  margin-left: 10px;
  margin-right: 10px;
  display: block;
  color: #b2bbbd;
  font-weight: bold;
  transition: opacity 600ms 0s ease;
}

.nav-link:hover {
  color: #fff !important;
}

.nav-link:focus {
  color: #fff !important;
}

.container {
  width: 800px;

  z-index: 1;
  margin-top: 10px;

  width: 800px;
  max-width: 99%;
  padding: 20px 50px 30px 50px;
  border-radius: 3px;
  margin-bottom: 30px !important;
}

@media only screen and (max-width: 768px) {
  .container {
    .title-box {
      margin: -5px !important;
      margin-bottom: 30px !important;
      padding-left: 3px !important;
    }
    margin-left: 0px;
    margin-right: 0px;
    padding: 5px;
  }
}

h1 {
  padding-bottom: 1.5em;
  padding-top: 0.5em;
  font-size: xx-large;
}

.frame-subscription {
  font-family: "Share", cursive;
  border: 4px solid;
  border-color: #3079ab;
  background-color: #fff;
  width: 100%;
  padding: 2em;
  margin-bottom: 2em;
}

.frame {
  border-top: 4px solid;
  border-top-color: #3079ab;
  background-color: #fff;
  border-radius: 2.2px;
  -webkit-box-shadow: 0px 3px 8px 0px rgba(0, 0, 0, 0.25);
  box-shadow: 0px 3px 8px 0px rgba(0, 0, 0, 0.25);
  width: 100%;
  padding: 4em;
  margin-bottom: 3em;
}

.frame-admin {
  width: 100%;
  padding: 1em !important;
  margin: -20px -50px -30px -50px;
}

@media only screen and (max-width: 600px) {
  .frame {
    padding: 1em;
  }
}

.list-info li {
  padding-top: 1em;
}

.vertical-align {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.container-main {
  min-width: 90%;
  min-height: 70vh;

  a {
    color: #6c757d;
  }

  a:hover {
    color: #3079ab !important;
    text-decoration: none;
  }

  .title-box {
    color: #3079ab;
    background-color: #f9fafa;
    margin: -20px -50px 30px -50px;
    padding: 10px 50px 10px 50px;
    border-bottom: 0.5px solid #efefef !important;
  }

  .list-group-item {
    border: 0px;
  }

  .list-group-item-action:hover,
  .list-group-item-action:focus {
    background-color: inherit;
    color: #4d76d3;
  }

  .btn-new {
    display: inline-block;
    border: 2px solid rgba(48, 73, 97, 0.1);
    border-radius: 10px;
    text-align: center;

    color: #3079ab;
    font-weight: 500;
    background: transparent;
    padding: 0 12px;
    white-space: nowrap;
    line-height: 32px;
    transition: border-color 0.15s ease, background-color 0.15s ease,
      color 0.15s ease;
  }

  .btn-new:hover {
    color: #3079ab !important;
    border-color: #3079ab;
  }

  .btn-success { 
    color: white !important;
  }

  .btn-danger {
    display: inline-block;
    border: none;
    border-radius: 10px;
    text-align: center;

    color: #9c797c;
    font-weight: 500;
    background: transparent;
    padding: 3px;
    white-space: nowrap;
    line-height: 32px;
    transition: border-color 0.15s ease, background-color 0.15s ease,
      color 0.15s ease;
  }

  .btn-danger:hover {
    color: red !important;
    border-color: red;
  }

  
}

