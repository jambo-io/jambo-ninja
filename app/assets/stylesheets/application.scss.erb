  background-color: #06292f08;
  margin: -3.5em !important;
}
 
.table-custom td {
  
  border: 1px solid #e2ebf1;
  white-space: nowrap;
  vertical-align: middle;
  height: 30px;
  padding: 2px;
}

.material-icons {
  vertical-align: middle;
}

.border-text {
  
  padding: 10px;
