
<%= form_for(bemvindo) do |f| %>

  <div class="row">
    <div class="col-lg-6">
        <%= f.label "Nome", class:"control-label" %>
        <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="col-lg-6">
     
        <%= f.label "Sobrenome", class:"control-label" %>
        <%= f.text_field :lastname, class:"form-control" %>
    </div>
  </div>

   <div class="row">
    <div class="col-lg-12">

      <%= f.label "Cidade", class:"control-label" %>
      <%= f.select :city, [["Escolha sua cidade"],["Campo Grande-MS", "cg-ms"], ["Dourados-MS", "dourados-ms"], ["São Gabriel do Oeste", "sgo-ms"]], {}, {class: "form-control"} %>


    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
   
        <%= f.label "E-mail", class:"control-label" %>
        <%= f.text_field :email, class:"form-control" %>

    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
     
        <%= f.label "Comentários", class:"control-label" %>
        <%= f.text_area :comments, class:"form-control" %>
   
    </div>
  </div>
</br>
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4 text-center">
      <div class="actions">
        <%= f.submit "Enviar", class: "btn btn-default btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

