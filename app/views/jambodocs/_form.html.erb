<script>
    $(function(){
        /* Hide form input values on focus*/
        $('input[type=text]').each(function(){
            var txtval = $(this).val();
            $(this).focus(function(){
                if($(this).val() == txtval){
                    $(this).animate({"color":"#3c444e"},500, function(){
                        $(this).val('');
                    });
                }
            });
            /*Restoring value if blur*/
            $(this).blur(function(){
                if($(this).val() == ""){
                    $(this).val(txtval).animate({"color":"#ffffff"}, 500);
                }
            });
        });
    });
</script>