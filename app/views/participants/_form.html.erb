<%= form_for(participant, :html => {:class => "form-horizontal center"}) do |f| %>
  <% if participant.errors.any? %>
    <% participant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  <% end %>

  <%= f.hidden_field :eventosbahai_id, :value => @eventosbahai_id %>

  <div class="form-group">
    <%= label_tag "Nome Completo" %>
    <%= text_field_tag :full_name, nil, class:'form-control', required: true %>
  </div>

  <% if @event.administrative_function %>
    <div class="form-group">
      <%= label_tag "Função Administrativa" %>
      <%= text_field_tag :full_name, nil, class:'form-control' %>
    </div>
  <% end %>

  <div style="text-align: center;">
      <%= f.submit @btname, class:'btn btn-success' %>  
  </div>
<% end %>
