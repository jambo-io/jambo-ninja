
<%= form_for(participant, :html => {:class => "form-horizontal center"}) do |f| %>
  <% if participant.errors.any? %>
    <% participant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  <% end %>
  
   <div class="row">
      
      <div class="form-group col-6 mr-0 pr-0" style="width: 100%;">
        
          <%= f.label 'Nome' %>
          <%= f.text_field :name, :class=>'form-control m-0', required: true %>
        </div>
        <div class="form-group col-6 ml-0" style="width: 100%;">
          
          <%= f.label 'Sobrenome' %>
          <%= f.text_field :lastname, :class=>'form-control m-0', required: true %>
       
        </div>
    </div>
     

    <div class="form-group">
      <%= f.label 'E-mail ou Celular' %>
      <%= f.text_field :contact, :class=>'form-control', :placeholder => "Ex: 61 99998 8888", required: true %>
    </div>

    <div class="form-group">
      <%= f.label 'Aniversário' %><br>
      <%= f.date_select :birthday, 
        {:order => 
        [:day, :month, :year], 
        :prompt => {:day => "Dia", 
        :month => "Mês", 
        :year => "Ano"}, 
        :start_year => Time.now.year - 90, 
        :end_year => Time.now.year - 1}, 
        {:class=>'form-control', :style=>'display:inline-block; width:30%'}%>
    </div>

    <div class="form-group">
      <%= f.label 'Endereço' %>
      <%= f.text_field :address, :class=>'form-control' %>
    </div>


    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label 'Cidade' %>
        <%= f.text_field :city, :class=>'form-control', required: true %>
      </div>

    <div class="form-group col-md-6">
      <%= f.label 'Estado' %>
      <%= f.select :state, 
        [['Acre','AC'],
         ['Alagoas','AL'],
         ['Amapá','AP'],
         ['Amazonas','AM'],
         ['Bahia','BA'],
         ['Ceará','CE'],
         ['Distrito Federal','DF'],
         ['Espírito Santo','ES'],
         ['Goiás','GO'],
         ['Maranhão','MA'],
         ['Mato Grosso','MT'],
         ['Mato Grosso do Sul','MS'],
         ['Minas Gerais','MG'],
         ['Pará','PA'],
         ['Paraíba','PB'],
         ['Paraná','PR'],
         ['Pernambuco','PE'],
         ['Piauí','PI'],
         ['Rio de Janeiro','RJ'],
         ['Rio Grande do Norte','RN'],
         ['Rio Grande do Sul','RS'],
         ['Rondônia','RO'],
         ['Roraima','RR'],
         ['Santa Catarina','SC'],
         ['São Paulo','SP'],
         ['Sergipe','SE'],
         ['Tocantins','TO']],
         { prompt: "Selecione um Estado" }, class: 'form-control', required: true %>
       </div>
     </div>


     <div class="field">
        <p><%= f.check_box :publist, :checked=>true %> Deseja aparecer na lista de inscritos nesta página?</p>
    </div>
  

    <%= f.hidden_field :eventosbahai_id, :value => @eventosbahai_id %>
   

    <div style="text-align: center;">

              
       <%= f.submit @btname, class:'btn btn-success' %>  
        
    </div>

<% end %>
