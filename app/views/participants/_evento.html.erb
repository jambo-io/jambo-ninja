<h1 style="text-align:center;"><%= @event.name %></h1>
<p style="text-align:center;"><%= @event.theme %></p>
<br>
<% if @event.image.exists? %>
<div class="text-center p-2">
	<figure class="figure">
		 <%= image_tag @event.image(:big), class:"card-img-top", alt:"Card image cap" %>

	</figure>
</div>
<% end %>
<ul class="list-info">
  <li>De <strong><%= @event.start_at.strftime('%d-%m-%Y') %>
  </strong> à <strong><%= @event.end_at.strftime('%d-%m-%Y') %></strong></li>
  <li>Cidade: <strong><%= @event.city %> - <%= @event.state %></strong></li>

   <%= simple_format @event.description %>

	<% if @event_available %>
	  	<li>Número de vagas disponíveis: <span class="badge badge-success"><%= @vacancies %></span></li>
		<li>Taxa de Inscrição: <span class="badge badge-success"><%= number_to_currency(@event.price, unit: "R$", separator: ",", delimiter: "", format:"%u %n") %></span></li>
		</ul>
	<% else %>
	  	<div class="text-center">
	  		<h2><span class="text-danger">Inscrições Encerradas</span><h2>
	  	</div>
	<% end %>

	<% if @event_available %>
	    <% unless @event.longitude.nil? || @event.latitude.nil? %>
	      <div id="cardmap'" class="card text-center">
	          <div class="card-title">
	            <h2 style="margin-top: 40px; margin-bottom: -20px;">Onde fica?</h2>
	          </div>
	          <div class="card-body">
	            <div class="popin" style=" box-shadow: 0 0 5px #999; border-radius:2px; border-ratio:9;">
	              <div id="map"> </div>
	              <%= @event.location %>, <%= @event.city %> - <%= @event.state %>
	            </div>
	          </div>

	        </div>
	        <script>
	            $(document).ready(function(){
	                var map = new GMaps({
	                    el: '#map',
	                    center: {lat: <%= @event.latitude %>, lng:<%= @event.longitude %>},
	                    width: '100%',
	                    height: '300px',
	                    zoomControl: true,
	                });
	                map.addMarker({
	                    lat:<%= @event.latitude %>,
	                    lng:<%= @event.longitude %>,
	                    title: "<%= @event.location %>",
	                    infoWindow: {
	                        content: "<h4><%= @event.name %></h4><%= @event.location %><br>"
	                    },
	                    click: function (e) {
	                        map.map.panTo(e.position);
	                    }
	                })

	                if (typeof google === 'object' && typeof google.maps === 'object') {
	                } else {
	                    $("#cardmap").hide();
	                }
	            });
	        </script>
	    <% end %>
    <% end %>
	