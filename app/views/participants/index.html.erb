<div id="section1" class="container">
	<h1> Bem vindo <%= current_user.name %>! </h1>
	

	<ul class="list-inline">
		<li><%= link_to "Criar Evento", new_eventosbahai_path, class:'btn btn-success' %></li>
		<li><%= link_to "Ver todos os Eventos", eventosbahais_path, class:'btn btn-info' %></li>
	</ul>

	
</div>

<% if @size > 0 %>

	<div class="container">
		<p>Atualmente temos <%= @size %> <%= "participante".pluralize(@size) %> <%= "inscrito".pluralize(@size) %></p>
	</div>

<% end %>

<div class="container table-responsive" style="width:99%;">

<% @eventosbahais.each do |p| %>
	<h2><%= p.name %></h2>		
	<table class="table">
		<thead>
			<tr>
				<th scope="col"></th>
				<th scope="col">Nome</th>
				<th scope="col">Contato</th>
				<th scope="col">Idade</th>
				<th scope="col">Endere√ßo</th>
				<th scope="col">Cidade</th>
				<th scope="col">Registrado em</th>
			</tr>
		</thead>
		<tbody>
				<% p.participants.each do |f| %>
					<tr>
						<th></th>
						<td><%= f.name %> <%= f.lastname %></td>
						<td><%= f.contact %></td>

						<td>
							<% unless f.birthday.nil? %>
							<%= Date.today.year - f.birthday.year %>
							<% end %>
						</td>

						<td><%= f.address %></td>
						<td><%= f.city %> - <%= p.state %></td>
						<td><%= f.created_at.strftime("%d/%m/%Y") %></td>
					</tr>
				<% end %>
			
		</tbody>
	</table>
<% end %>
	

</div>

<script>
	

	slide("#section1");


</script>