<div id="section1" class="container">
	<h1> Bem vindo <%= current_user.name %>! </h1>
	

	<ul class="list-inline">
		<li><%= link_to "Criar Evento", new_eventosbahai_path, class:'btn btn-success' %></li>
		<li><%= link_to "Ver todos os Eventos", eventosbahais_path, class:'btn btn-info' %></li>
	</ul>

	
</div>

<% if @size > 0 %>

	<div class="container">
		<p>Atualmente temos <%= @size %> <%= "participante".pluralize(@size) %> <%= "inscrito".pluralize(@size) %></p>
	</div>

<% end %>

<div id="section2" class="container table-responsive" style="width:99%;">

<% @eventosbahais.each do |p| %>
	<h2><%= p.name %></h2>		
	<h3 class="text-danger">
		<% if p.end_at - Date.today < 0 %>
			Evento encerrado
		<% end %>
	</h3>
	<table class="table">
		<thead>
			<tr>
				<% if p.participants.size > 0 %>
				<th scope="col"></th>
				<th scope="col">Nome</th>
				<th scope="col">Contato</th>
				<th scope="col">Idade</th>
				<th scope="col">Endereço</th>
				<th scope="col">Cidade</th>
          <th scope="col">Pagamento</th>
				<th scope="col">Registrado em</th>
				<th scope="col">#</th>
				<% else %>
					Nenhum participante inscrito.
				<% end %>
			</tr>
		</thead>
		<tbody>
				<% p.participants.each do |f| %>
					<tr id="participant_<%= f.id %>">
						<th></th>
						<td><%= f.name %> <%= f.lastname %></td>
						<td><%= f.contact %></td>

						<td>
							<% unless f.birthday.nil? %>
							<% age =  Date.today.year - f.birthday.year %>
                <% if age > 30 %>
                  Maior de 30
                <% else %>
                  <%= age %>
                <%end %>
							<% end %>
						</td>

						<td><%= f.address %></td>
						<td><%= f.city %> - <%= p.state %></td>
            <td>
              <% if f.autolyse == "1" %>
                <%= "Parcelado" %>
              <% end %>
              <% if f.autolyse == "2" %>
                <%= "À vista" %>
              <% end %>
              <% if f.autolyse == "3" %>
                <%= "Menor de 12" %>
              <% end %>
            </td>

						<td><%= f.created_at.strftime("%d/%m/%Y") %></td>
						<td><%= link_to "X", participant_path(f.id), method: :delete, data:{confirm: 'Tem certeza que deseja deletar esse participante?'}, :remote => true, id: "remove_participant_#{f.id}" %></td>

						<script>

							$('#remove_participant_<%= f.id %>').bind('ajax:success', function(){
								$("#participant_<%= f.id %>").remove();						
							});

						</script>


					</tr>
				<% end %>
			
		</tbody>
	</table>
<% end %>
	

</div>

<script>

	slide("#section1");

</script>