
<div class="row">
	<div class="col-lg-8 mx-auto">
		<div class="actions text-center">
			<ul class="list-inline">
				<% if user_signed_in? %>
					<% if (current_user.admin? && correct_user_eventosbahais?) || current_user.superuser? %>
						<% unless @event_available %>
							<p class="text-danger">Administrador, você pode permitir mais inscrições alterando o número de vagas, ou mudando a data de Início do evento<p>
						<% end %>
					<% end %>
			    <% end %>
			</ul>
		</div>

		<div class="row">
			<div class="col-lg-12 col-sm-12">
				<div class="frame">
					<div class="container-custom evento-container mx-auto pt-5 mb-2">
						<%= render partial: 'participants/evento' %>
					</div>
				</div>
			</div>
		</div>

		<% unless @event.payment.nil? || @event.payment.blank? %>
			<div class="row">
				<div class="col-12">
					<div class="frame">
						
							<div id="section2" class="container-custom amigos-container pt-5 mx-auto mb-2">
							<h1 style="text-align:center; margin-bottom:40px;">Pagamento</h1>
							<div class="form-row">
							<ul>
								<%= simple_format @event.payment %>
							</ul>
							</div>
							</div><!-- section2 -->
						
					</div>
				</div>
			</div><!-- row -->
		<% end %>
		<% if @event_available %>
			<div class="row">
				<div class="col-12">
					<div class="frame">
						
						<div class="vertical-align">
							<%= image_tag "il_running.png", class:"text-center", height: 200, width: "auto" %>
						</div>
						<h1 style="text-align:center;">Inscrição</h1>
						
						<% if user_signed_in? %>
							<div id="section3" class="container-custom inscricao-container mx-auto mb-2">
								<%= render 'form', participant: @participant %>
							</div>
						<% else %>

							<%= render partial: 'devise/registrations/form' %>

						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	
</div>


<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">Entrar</h5>
		
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
	  <div class="modal-body">
	  <p>Parece que você já possui uma conta com este E-mail, você só precisa logar que efetuaremos sua inscrição.</p>
        <%= render partial: 'devise/sessions/form' %>
      </div>
      
    </div>
  </div>
</div>







