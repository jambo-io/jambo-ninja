
<div class="content">
	<div class="row mx-auto">
		<div class="col-lg-3">
			<% if @registered.count > 0 %>
				<div class="container-custom amigos-container mx-auto mb-2">
					<h3 style="text-align:center;"><%= "Amigo".pluralize(@registered.count) %>
						<%= "Inscrito".pluralize(@registered.count) %></h3>
					<div class="form-row" style="text-align: left;">
						<ul>
							<% @registered.each do |r| %>

								<li><%= r.name %></li>
							<% end %>
						</ul>
					</div>
				</div>
			<% end %>
		</div>
		
		<div class="col-lg-6">
			<div class="row">
				<div class="col-12">
					<div class="container-custom evento-container mx-auto mb-2">
						<%= render partial: 'participants/evento' %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
				  <% unless @evento.payment.nil? || @evento.payment.blank? %>
					  <div id="section2" class="container-custom amigos-container mx-auto mb-2">
					  <h1 style="text-align:center; margin-bottom:40px;">Pagamento</h1>
					  <div class="form-row">
				      <ul>
				        <%= simple_format @evento.payment %>
				      </ul>
					  </div>
					  </div><!-- section2 -->
				  <% end %>
				</div>
			</div><!-- row -->
			<div class="row">
				<div class="col-12">
					<% if @event_available %>
						<div id="section3" class="container-custom inscricao-container mx-auto mb-2">
							<h1 style="text-align:center; text-size:100px; margin-bottom: 40px;">Inscrição</h1>
							<%= render 'form', participant: @participant %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>






