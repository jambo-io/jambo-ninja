
<div class="row">
	<div class="col-lg-6 mx-auto">

		<div class="actions text-center">
			<ul class="list-inline">
				
				<% if user_signed_in? && current_user.admin? && correct_user_eventosbahais? %>
					<% unless @event_available %>
						<p class="text-danger">Administrador, você pode permitir mais inscrições alterando o número de vagas, ou mudando a data de Início do evento<p>
					<% end %>
						<li class="list-inline-item"><%= link_to 'Editar',  edit_eventosbahai_path(params[:id]), class: 'btn btn-new' %></li>
						<li class="list-inline-item"><%= link_to 'Todos os eventos', eventosbahais_path, class: 'btn btn-new' %></li>
				<% end %>
			</ul>
		</div>

		<div class="row">
			<div class="col-lg-12 col-sm-12">
				<div class="frame">
					
					<div class="container-custom evento-container mx-auto pt-5 mb-2">
						<%= render partial: 'participants/evento' %>
					</div>

					
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-12">
				<div class="frame">
					<% unless @event.payment.nil? || @event.payment.blank? %>
						<div id="section2" class="container-custom amigos-container pt-5 mx-auto mb-2">
						<h1 style="text-align:center; margin-bottom:40px;">Pagamento</h1>
						<div class="form-row">
						<ul>
							<%= simple_format @event.payment %>
						</ul>
						</div>
						</div><!-- section2 -->
					<% end %>
				</div>
			</div>
		</div><!-- row -->

		<div class="row">
			<div class="col-12">
				<div class="frame">
					<% if @event_available %>
						<div class="vertical-align">
							<%= image_tag "il_running.png", class:"text-center", height: 200, width: "auto" %>
						</div>
						<h1 style="text-align:center; margin-bottom:40px;">Inscrição</h1>
						
						<% if user_signed_in? %>
							<div id="section3" class="container-custom inscricao-container mx-auto mb-2">
								<%= render 'form', participant: @participant %>
							</div>
							<% if current_user.participants.where(eventosbahai_id: @event.id).first.present? %>
								Você está inscrito.
							<% else %>
								Você não está inscrito.
							<% end %>
						<% else %>
							

								<div class="row">
									<div class="col-lg-6 mx-auto">
									<p>Para realizar a inscrição você precisa estar logado.</p>
										<%= render "devise/sessions/form" %>
										<%= render "devise/shared/links" %>
									</div>
							</div>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>







