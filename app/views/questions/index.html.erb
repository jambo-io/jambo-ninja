<div class="row">
	<div class="col-lg-8 mx-auto">
		<div class="frame">
            <h1 style="text-align:center;">Perguntas</h1>
            <% @questions.each do |question| %>
                <div><strong><%= question.question %></strong></div>
                <% @participants.each do |participant| %>
                    <% answer = Answer.where(participant_id: participant.id, question_id: question.id).first %>
                    <% if answer.present? && answer.answer =="sim" %>
                        <span class="badge badge-success">Sim</span>
                    <% end %>
                    <% if answer.present? && answer.answer =="nao" %>
                        <span class="badge badge-danger">NÃ£o</span>
                    <% end %>
                    <% if answer.present? && answer.answer =="talvez" %>
                        <span class="badge badge-info">Talvez</span>
                    <% end %>
                    <%= participant.name %> <%= participant.lastname %><br>
                    
                <% end %><br><br>
            <% end %>

            
            
            <br>
                <%= link_to "Nova Pergunta", new_eventosbahai_question_path(Eventosbahai.find(params[:eventosbahai_id])) %>
        </div>
    </div>
</div>