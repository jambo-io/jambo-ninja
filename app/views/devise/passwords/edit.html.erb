<div class="frame">
  <h1 class="text-center">Alteração de Senha</h1>
  <div class="row">
    <div class="col-lg-6 mx-auto">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "Nova senha" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirme a nova senha" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Mudar minha senha", class:'btn btn-success' %>
        </div>
      <% end %>

      <div class="text-center p-3">
        <%= render "devise/shared/links" %>
      </div>

    </div>
   </div>
</div>
