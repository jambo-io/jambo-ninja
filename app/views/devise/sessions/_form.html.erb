<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:'form-control devise_email', autocomplete: "email", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:'form-control', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= hidden_field_tag :eventosbahai_id, @eventosbahai_id %>

    <div class="actions text-center">
      <%= f.submit "Log in", class:'btn btn-success' %>
    </div>
<% end %>