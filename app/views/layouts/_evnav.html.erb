<%= javascript_include_tag('parallax.js') %>
<%= javascript_include_tag('participants.js') %>

<nav class="navbar navbar-expand-lg navbar-dark" >
  <%= link_to image_tag("logo0brand-sm-01-01.png", :size => '40', class:'navbar-brand'), root_path %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="container-fluid" style="z-index: 5">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="animation <%= 'nav-animation' if current_page?(root_path) %>">

      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">

          <li class="nav-item"><%= link_to 'Principal', root_path, class:"nav-link" %></li>

          <% unless (Eventosbahai.last.blank?) %>
            <li class="nav-item <%= 'active' if current_page?(new_bemvindo_path) %>"><%= link_to 'Inscrição', partnew_path(Eventosbahai.last.id), class:"nav-link" %></li>
          <% end %>
          
          <% if user_signed_in? && user_signed_in? && current_user.admin? %>
            <li class="nav-item"><%= link_to 'Administrador', participants_path, class:"nav-link" %></li>
          <% end %>

        </ul>

        <ul class="nav navbar-nav ml-auto" style="z-index: 1;">
          <% if user_signed_in? %>
            <li> <%= link_to 'Minha Inscrição', participant_path(current_user.participants.last), class:"nav-link" %></li>
            <% if user_signed_in? && current_user.admin? %>
            <li>
              <%= link_to 'Usuários',users_path, class:"nav-link" %>
            </li>
            <% end %>

            <li class="dropdown">
              <%= link_to "#{current_user.email}<span class='caret'></span>".html_safe, users_path, { :class => "nav-link dropdown-toggle", 'data-toggle' => "dropdown", 'aria-haspopup' => "true", 'aria-expanded'=>"false", 'role'=>"button"} %>

                <ul class="dropdown-menu dropdown-menu-right account-dropdown" style="z-index: 5;">
                  <li class="dropdown-item"><%= link_to "Perfil", user_path(current_user), class:"nav-link" %></li>
                  
                  <li class="dropdown-item">
                    <%= link_to "Sair", destroy_user_session_path, method: "delete", class:"nav-link" %>
                  </li>
                </ul>
              </li>

          <% else %>



            <li class="dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" role="button"><b>Login</b> <span class="caret"></span></a>
              <ul  class="dropdown-menu dropdown-menu-right" style="min-width: 300px; max-width: 98%;">
                <li class="dropdown-item">
                   <div class="row">
                      <div class="col-md-12">
                          <%= form_for(:user, :url => session_path(:user)) do |f| %>
                            <div class="form-group">
                               <div class="field">
                              <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="field">
                              <%= f.password_field :password, autocomplete: "off", placeholder:"Senha", class:"form-control" %>
                              </div>
                              <div class="help-block text-center"><%= link_to "Esqueceu sua senha?", new_password_path(:user) %></div>
                            </div>
                            <div class="form-group">
                               <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                            </div>
                            <div class="checkbox" style="color:#000;">
                               <label>
                               <input type="checkbox" > Manter logado
                               </label>
                            </div>
                         <% end %>
                      </div>
                      <div class="bottom text-center">
                        <span style="color:#bbb;">Novo aqui? </span><%= link_to "Junte-se a nós", new_user_registration_path %>
                      </div>
                   </div>
                </li>
              </ul>
            </li>
          </ul><!-- /.Login -->
        <% end %>


      </div><!-- /.navbar-collapse -->
    </div><!-- animation -->
  </div><!-- /.container-fluid -->
</nav>




