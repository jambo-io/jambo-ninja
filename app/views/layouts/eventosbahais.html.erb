<!DOCTYPE html>
<html>
  <head>
    <title>Jambo Network</title>
    

      <%= render partial: 'layouts/metatags' %>

  </head>
  <body>

     <%= render "layouts/evnav" %>

     <div class="content" style="min-height: 100vh">
        <div class="container container-main rounded-top mt-5 mx-auto">

          <% if user_signed_in? && current_user.admin? %>
            <div class="text-center"">
            <ul class="list-inline">
              <li class="list-inline-item"><%= link_to "Criar Evento", new_eventosbahai_path, class:'btn btn-new' %></li>
              <li class="list-inline-item"><%= link_to 'Eventos', eventosbahais_path, class: 'btn btn-new' %></li>
              <% unless Participant.all.blank? %>
                <li class="list-inline-item"><%= link_to "Participantes", participants_path, class:'btn btn-new' %></li>
              <% end %>
            </ul>
            </div>
          <% end %>

          <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>


          <%=yield %>
       </div>
     </div>

     <%= render "layouts/footer" %>

  </body>
</html>

