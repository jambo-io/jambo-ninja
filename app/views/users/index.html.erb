<div class="row">
	<div class="col-lg-8 mx-auto">
		<div class="frame">

			<h1 class="text-center">Usu√°rios</h1>
			<% unless @users.count == 0 %>
				<table>
					<thead>
						<tr>
							<th>Nome</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
							<% @users.each do |user| %>
								<tr>
									<% if user.user_profile.present? %>
										<td><%= link_to user.user_profile.name, user_profile_path(user) %>
										<span class="badge badge-success"><%= "admin" if user.admin? %></span> 
										<span class="badge badge-info"><%= "superuser" if user.superuser? %></span></td>
									<% end %>
								</tr>
						<% end %>
					</tbody>
				</table>
			<% end %>

		</div>
	</div>
</div>