<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert-error">
			O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
		</div> 
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
	<div class="field form-group">
		<%= f.label :name, "Nome", class:"control-label" %>
		<%= f.text_field :name, class:"form-control" %>
	</div>
	<div class="field form-group">
		<%= f.label :email, "Email ou Celular", class:"control-label" %>
		<%= f.email_field :email, class:"form-control" %>
	</div>
	<div class="field form-group">
		<%= f.label :password, "Senha", class:"control-label" %>
		<%= f.password_field :password, class:"form-control" %>
	</div>
	<div class="field form-group">
		<%= f.label :password_confirmation, "Confirmação da Senha", class:"control-label" %>
		<%= f.password_field :password_confirmation, class:"form-control" %>
	</div>
	<div class="actions">
		<%= f.submit "Cadastrar" %>
	</div>
<% end %>