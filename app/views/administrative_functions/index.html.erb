<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="frame">

      <h1 class="text-center">Funções Administrativas</h1>

      <table>
        <thead>
          <tr>
            <th>Nome da Função</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @administrative_functions.each do |administrative_function| %>
            <tr>
              <td><%= administrative_function.name %></td>
              <td><%= link_to 'Ver', administrative_function %></td>
              <td><%= link_to 'Editar', edit_administrative_function_path(administrative_function) %></td>
              <td><%= link_to 'Deletar', administrative_function, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <div class="text-center p-3">
        <%= link_to 'Nova Função Administrativa', new_administrative_function_path %>
      </div>
    </div>
  </div>
</div>
