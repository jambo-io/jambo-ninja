
  <% if user_signed_in? && user_signed_in? && current_user.admin? %>
    <ul class="list-inline text-center">
    <li class="list-inline-item"><%= link_to "Criar Evento", new_eventosbahai_path, class:'btn btn-success' %></li>
    
    <% unless @participants.blank? %>
      <li class="list-inline-item"><%= link_to "Ver todos os participantes", participants_path, class:'btn btn-warning' %></li>
    <% end %>
    </ul>
  <%end %>


  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="frame">
        <h1 class="text-center">Eventos Bahá'ís</h1>

        <% if @eventosbahais.count == 0 %>
          <p class="text-muted p-5 m-5 text-center">Não há nenhum evento ainda.</p>
        <% end %>

        <table>
          <tbody>
            <% @eventosbahais.each do |eventosbahai| %>
              <tr>
                <td><%= link_to eventosbahai.name, partnew_path(eventosbahai), anchor: "section1" %>
                

                <% if user_signed_in? && user_signed_in? && current_user.admin? && eventosbahai.user_id == current_user.id %>  -  
                  <%= link_to 'Editar', edit_eventosbahai_path(eventosbahai) %> |
                  <%= link_to 'Destruir', eventosbahai_path(eventosbahai), method: :delete, data:{confirm: 'Deletar um evento irá deletar todos os participantes inscritos também. Deseja deletar mesmo assim?'} %> 
                <%end %>
              
              </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  

</div>

