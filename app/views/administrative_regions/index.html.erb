<div class="row">
	<div class="col-lg-8 mx-auto">
		<div class="frame">
      <h1 style="text-align:center;">Regiões Administrativas</h1>

      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @administrative_regions.each do |administrative_region| %>
            <tr>
              <td><%= administrative_region.name %></td>
              <td><%= link_to 'Ver', administrative_region %></td>
              <td><%= link_to 'Editar', edit_administrative_region_path(administrative_region) %></td>
              <td><%= link_to 'Destruir', administrative_region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      
      <div class="text-center p-3">
        <%= link_to 'Nova Região Administrativa', new_administrative_region_path %>
      </div>
    </div>
  </div>
</div>
